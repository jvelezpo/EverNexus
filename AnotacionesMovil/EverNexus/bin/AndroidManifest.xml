<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sebas.tian.evernexus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".control.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".control.AboutActivity"
            android:label="@string/about_name" />
        <activity 
            android:name=".control.NoteViewActivity" />
        <activity 
            android:name=".control.NoteEditActivity" />
        
    </application>

</manifest>