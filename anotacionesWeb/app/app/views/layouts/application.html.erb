<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
  <%= render 'layouts/header' %>
</div>
<div id="bodybackground">
<div id="content">
  <% flash.each do |key, value| %>
      <div id="flash" class="flash <%= key %>"><%= value %></div>
  <%  end %>
  <%= yield %>
</div>
</div>
<div id="footer">
  <%= render 'layouts/footer' %>
</div>
</body>
</html>

